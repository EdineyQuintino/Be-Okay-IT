generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Company {
  id              String        @id @default(uuid())
  name            String        @db.VarChar(50)
  cnpj            String        @unique @db.VarChar(14)
  date_foundation DateTime      @db.Date()
  value_hour      Decimal       @db.Decimal(9, 2)
  Calculation     Calculation[]

  @@map("company")
}

model Calculation {
  id          String   @id @default(uuid())
  cnpj        Company  @relation(fields: [cnpj_id], references: [cnpj])
  cnpj_id     String   @unique @db.VarChar(14)
  date_start  DateTime @db.Date()
  date_theend DateTime @db.Date()

  @@map("calculation")
}
